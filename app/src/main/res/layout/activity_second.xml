<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical">

    <include layout="@layout/back_main"></include>
    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/second_review"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scrollbarSize="20dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="货道:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/second_id"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_edittext"
            android:gravity="center"
            android:padding="3dp"
            android:text="1"
            android:textColor="@color/red"
            android:textSize="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="X:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/second_x"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_edittext"
            android:maxLength="4"
            android:numeric="integer"
            android:padding="3dp"
            android:textSize="17dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Y:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/second_y"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_edittext"
            android:maxLength="4"
            android:numeric="integer"
            android:padding="3dp"
            android:textSize="17dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="Z:"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/second_z"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_edittext"
            android:maxLength="4"
            android:numeric="integer"
            android:padding="3dp"
            android:textSize="17dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightseagreen"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/second_xy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="XY坐标测试"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/second_xyback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="XY坐标归位"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/second_ztest"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="Z坐标测试"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/second_zback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="Z坐标归位"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/second_out"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="出货测试"
            android:textColor="@color/orange"
            android:textSize="18dp" />


        <Button
            android:id="@+id/second_outback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="复位"

            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/second_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="保存坐标"
            android:textColor="@color/yellow"
            android:textSize="18dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightseagreen"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="时间/s:"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/second_et_time"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/corner_edittext"
                android:gravity="center"
                android:maxLength="4"
                android:numeric="integer"
                android:padding="3dp"
                android:text="3"
                android:textSize="17dp" />

        </LinearLayout>

        <Button
            android:id="@+id/second_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="调整延迟时间"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <Button

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/transparent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="@color/lightseagreen"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/second_test"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="循环测试"
            android:textColor="@color/red"
            android:textSize="18dp" />


        <Button
            android:id="@+id/second_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:enabled="false"
            android:background="@drawable/selector_button"
            android:text="停止"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/second_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/selector_button"
            android:text="货道设置"
            android:textColor="@color/brown"
            android:textSize="18dp" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/second_rl_set"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corner_8dp_white"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="类型设定："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/second_type"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/t1"
            android:background="@drawable/corner_edittext"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="GOODS2"></TextView>

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/t1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="串口设定："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Spinner

            android:id="@+id/second_port"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/second_type"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/t2"
            android:background="@drawable/corner_edittext"></Spinner>

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/t2"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="比特率设定："
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Spinner
            android:id="@+id/second_bit"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/second_port"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/t3"
            android:background="@drawable/corner_edittext"></Spinner>

        <Button
            android:id="@+id/second_set_ok"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/second_bit"
            android:layout_marginTop="25dp"
            android:background="@drawable/corner_8dp"
            android:text="确认"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/second_set_cancel"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/second_bit"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/second_set_ok"
            android:background="@drawable/corner_8dp"
            android:text="取消"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/second_testGone"
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/corner_8dp_white"
        android:orientation="horizontal"
        android:visibility="gone"

        >

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/second_checkAll"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="全选"
            android:textColor="@color/dodgerblue"
            android:textSize="20dp" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/second_checkFu"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/second_checkAll"
            android:layout_centerHorizontal="true"
            android:text="复选"
            android:textColor="@color/dodgerblue"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/second_checkFu"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/second_ok"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/corner_8dp"
                android:text="确认"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/second_cancel"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/corner_8dp"
                android:text="取消"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>